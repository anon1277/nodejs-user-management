<%- include('../layouts/header') %> <!-- Include the header at the top -->
<link rel="stylesheet" href="/assets/css/user.css">

<main>
    <div class="dashboard-container">
        <center>
            <h1>Dashboard</h1>
            
            <!-- User Info Section -->
            <div class="user-info">
                <h2>User Information</h2>
                <div class="info-item">
                    <strong>Name: </strong> <%= user.name %>
                </div>
                <div class="info-item">
                    <strong>Email: </strong> <%= user.email %>
                </div>
                <div class="info-item">
                    <strong>Mobile: </strong> <%= user.mobile %>
                </div>
                <div class="info-item">
                    <strong>Verified: </strong> <%= user.is_varified === 1 ? 'Yes' : 'No' %>
                </div>
                <div class="info-item">
                    <strong>Profile Image: </strong> 
                    <img src="/userimages/<%= user.image %>" alt="User Image" style="max-width: 100px; border-radius: 50%;">
                </div>
            </div>

            <!-- Message Section -->
            <% if (typeof message !== 'undefined') { %>
                <p class="message"><%= message %></p>
            <% } %>

            <!-- Logout Button -->
            <form action="/logout" method="POST">
                <button type="submit" class="logout-btn" style="background-color: rgb(247, 74, 74); color: white; padding: 10px 20px; font-size: 1.1em; border: none; border-radius: 5px; cursor: pointer; transition: background-color 0.3s ease;">
                    Logout
                </button>
            </form>
            <a href="/edit?id=<%=user._id%>" style="background-color: rgb(247, 74, 74); color: white; padding: 10px 10px;margin-top:30px; font-size: 1.1em; border: none; border-radius: 5px; cursor: pointer; transition: background-color 0.3s ease;">Edit Profile</a>
        </center>
    </div>
</main>

<%- include('../layouts/footer') %> <!-- Include the footer at the bottom -->
